<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="agora_erp" transaction-type="JTA">
        <jta-data-source>jdbc/agora-erp</jta-data-source>
        <class>pl.reaper.container.data.Log</class>
        <class>pl.reaper.container.data.Dictionary</class>
        <class>pl.reaper.container.data.DictionaryType</class>
        <class>pl.reaper.container.data.IncomingPaymentDocumentPosition</class>
        <class>pl.reaper.container.data.IncomingPaymentDocument</class>
        <class>pl.reaper.container.data.DocumentStatus</class>
        <class>pl.reaper.container.data.ScriptDependency</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.sharedCache.mode" value="NONE"/>
        </properties>
    </persistence-unit>
    
    <persistence-unit name="agora_old_erp" transaction-type="JTA">
        <jta-data-source>jdbc/agora-old-erp</jta-data-source>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.sharedCache.mode" value="NONE"/>
        </properties>
    </persistence-unit>
</persistence>
