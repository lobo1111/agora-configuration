<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="agora_erp" transaction-type="JTA">
        <jta-data-source>jdbc/agora-erp</jta-data-source>
        <class>pl.reaper.container.data.Account</class>
        <class>pl.reaper.container.data.Address</class>
        <class>pl.reaper.container.data.Bank</class>
        <class>pl.reaper.container.data.Category</class>
        <class>pl.reaper.container.data.CategoryItem</class>
        <class>pl.reaper.container.data.Community</class>
        <class>pl.reaper.container.data.Company</class>
        <class>pl.reaper.container.data.Dictionary</class>
        <class>pl.reaper.container.data.DictionaryType</class>
        <class>pl.reaper.container.data.IncomingPaymentDocument</class>
        <class>pl.reaper.container.data.IncomingPaymentDocumentPosition</class>
        <class>pl.reaper.container.data.Log</class>
        <class>pl.reaper.container.data.Payment</class>
        <class>pl.reaper.container.data.Person</class>
        <class>pl.reaper.container.data.Possession</class>
        <class>pl.reaper.container.data.Script</class>
        <class>pl.reaper.container.data.ScriptScheduler</class>
        <class>pl.reaper.container.data.Template</class>
        <class>pl.reaper.container.data.TemplateVariable</class>
        <class>pl.reaper.container.data.User</class>
        <class>pl.reaper.container.data.UserGroup</class>
        <class>pl.reaper.container.data.ZakladowyPlanKont</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.sharedCache.mode" value="NONE"/>
        </properties>
    </persistence-unit>
    
    <persistence-unit name="agora_old_erp" transaction-type="JTA">
        <jta-data-source>jdbc/agora-old-erp</jta-data-source>
        <class>pl.reaper.container.data.old.Mieszkania</class>
        <class>pl.reaper.container.data.old.Platnicy</class>
        <class>pl.reaper.container.data.old.Ulice</class>
        <class>pl.reaper.container.data.old.Wspolne</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.sharedCache.mode" value="NONE"/>
        </properties>
    </persistence-unit>
</persistence>
