<project name="Scripting Container - glassfish" default="help" basedir=".">
    <description>Scripting Container - glassfish</description>

    <target name="gf-deploy" depends="init">
        <exec executable="${gfAsadminPath}/asadmin" failonerror="true">
            <arg value="--port ${gfAdminPort}" />
            <arg value="--user ${gfAdminUser}" />
            <arg value="--passwordfile ${gfPasswordFile}" />
            <arg value="deploy ${earPath}" />
        </exec>

</project>