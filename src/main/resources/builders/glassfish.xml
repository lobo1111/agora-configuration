<project name="Scripting Container - glassfish" default="help" basedir=".">
    <description>Scripting Container - glassfish</description>

    <target name="gf-deploy">
        <exec executable="${gfAsadminPath}" failonerror="true">
            <arg value="-p" />
            <arg value="${gfAdminPort}" />
            <arg value="-u" />
            <arg value="${gfAdminUser}" />
            <arg value="-W" />
            <arg value="${gfPasswordFile}" />
            <arg value="deploy" />
            <arg value="${earPath}" />
        </exec>
    </target>
    
    <target name="gf-undeploy">
        <exec executable="${gfAsadminPath}" failonerror="false">
            <arg value="-p" />
            <arg value="${gfAdminPort}" />
            <arg value="-u" />
            <arg value="${gfAdminUser}" />
            <arg value="-W" />
            <arg value="${gfPasswordFile}" />
            <arg value="undeploy" />
            <arg value="${fullAppName}" />
        </exec>
    </target>
    
    <target name="gf-stop">
        <exec executable="${gfAsadminPath}" failonerror="true">
            <arg value="stop-domain" />
            <arg value="${buildType}" />
        </exec>
    </target>
    
    <target name="gf-start">
        <exec executable="${gfAsadminPath}" failonerror="true">
            <arg value="start-domain" />
            <arg value="${buildType}" />
        </exec>
    </target>
    
</project>