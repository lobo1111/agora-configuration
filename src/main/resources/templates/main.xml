<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <template>
        <name>menu-structure</name>
        <source>menu-structure.vtl</source>
        <variables>
            <var>
                <name>categories</name>
                <data>SELECT c FROM Category c</data>
            </var>
        </variables>
    </template>
    <template>
        <name>communities-and-possessions-list</name>
        <source>communities-and-possessions-list.vtl</source>
        <variables>
            <var>
                <name>communities</name>
                <data>SELECT c.name, c.area, pa.street, pa.houseNumber, pa.flatNumber, p.area 
                    FROM Community c JOIN c.possessions p JOIN p.address pa [:limit]
                </data>
            </var>
            <var>
                <name>countRows</name>
                <data>SELECT count(p) FROM FROM Community c JOIN c.possessions p JOIN p.address pa</data>
            </var>
        </variables>
    </template>
</templates>
