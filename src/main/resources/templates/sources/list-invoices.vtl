<?xml version="1.0" encoding="UTF-8" standalone="yes" ?> 
<entity name="invoices">
    <property name="maxResult" type="Integer">$countRows</property>
    <list name="items">
        #foreach($row in $items)
        <entity name="invoice">
            <property name="id" type="Integer">$row.getId()</property>
            <property name="number" type="String">$!row.getAttribute('NUMBER').getValue()</property>
            <property name="createdAt" type="String">$!row.getAttribute('CREATE_DATE').getValue()</property>
            <property name="contractor" type="String">$!row.getContractor().getName()</property>
            <property name="value" type="String">$!row.sumValues()</property>
            #if($!row.getAttribute('PAYED').getValue() == 'true')
                <property name="payed" type="String">Tak</property>
            #else
                <property name="payed" type="String">Nie</property>
            #end
            #if($!row.getAttribute('ACCEPTED').getValue() == 'true')
                <property name="accepted" type="String">Tak</property>
            #else
                <property name="accepted" type="String">Nie</property>
            #end
        </entity>
        #end
    </list>
</entity>