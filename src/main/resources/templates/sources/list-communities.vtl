<?xml version="1.0" encoding="UTF-8" standalone="yes" ?> 
<communities>
    #foreach($community in $communities)
        <item>
            <id>$!community.getId()</id>
            <name>$!community.getShortName()</name>
        </item>
    #end
        <settings>
            <maxResults>$countRows</maxResults>
        </settings>
</communities>